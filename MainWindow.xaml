<Window x:Class="Pharmacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pharmacy" Height="450" Width="683">
    <Grid Margin="0,0,0,0" Background="#E5DCF1F1">
        <DataGrid x:Name="Grid_Medicine" HorizontalAlignment="Left" Margin="175,10,0,0" VerticalAlignment="Top" Height="334" Width="415" ItemsSource="{Binding DGridContent}"/>
        <Button x:Name="B_Admin" Content="Admin" HorizontalAlignment="Left" Margin="621,35,0,0" VerticalAlignment="Top" Width="44" Click="B_Admin_Click"/>
        <Button x:Name="B_Request" Content="Request" HorizontalAlignment="Left" Margin="331,374,0,0" VerticalAlignment="Top" Width="75" Click="B_Request_Click"/>
        <ComboBox x:Name="CBox" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"  ItemsSource="{Binding CBoxContent}"/>
        <Button x:Name="B_Clear" Content="Х" HorizontalAlignment="Left" Margin="142,35,0,0" VerticalAlignment="Top" Width="21" Click="B_Clear_Click"/>
        <Label Content="Form Group&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="23" Width="120"/>
        <Button x:Name="B_Test" Content="Test" HorizontalAlignment="Left" Margin="621,74,0,0" VerticalAlignment="Top" Width="44" Click="B_Test_Click"/>


    </Grid>
</Window>
